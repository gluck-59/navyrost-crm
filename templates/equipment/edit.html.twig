{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <h1 class="mb-5">{{ title }}</h1>
    {{ form_start(form) }}
        <div class="row mb-4">
            <div class="col-12 col-md-3 mb-3">
                <h6 class="text-muted">{{ form_label(form.customer)|striptags }}</h6>
                {{ form_widget(form.customer, {'attr': {'class': 'form-control selectpicker', 'data-live-search': 'true'}}) }}
                {{ form_errors(form.customer) }}
            </div>
            <div class="col-12 col-md-3 mb-3">
                <h6 class="text-muted">{{ form_label(form.name)|striptags }}</h6>
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.name) }}
            </div>
            <div class="col-12 col-md-3 mb-3">
                <h6 class="text-muted">{{ form_label(form.mark)|striptags }}</h6>
                {{ form_widget(form.mark, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.mark) }}
            </div>
            <div class="col-12 col-md-3 mb-3">
                <h6 class="text-muted">{{ form_label(form.serial)|striptags }}</h6>
                {{ form_widget(form.serial, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.serial) }}
            </div>
        </div>
        <div class="row mb-5">
            <div class="col-12 col-md-3 mb-3">
                <h6 class="text-muted">{{ form_label(form.city)|striptags }}</h6>
                {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.city) }}
            </div>
            <div class="col-12 col-md-3 mb-3">
                <h6 class="text-muted">{{ form_label(form.address)|striptags }}</h6>
                {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.address) }}
            </div>
            <div class="col-12 col-md-6 mb-3">
                <h6 class="text-muted">{{ form_label(form.notes)|striptags }}</h6>
                {{ form_widget(form.notes, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.notes) }}
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                <button type="submit" class="btn btn-success">Сохранить</button>
                <a href="{{ path('equipment_index') }}" class="btn btn-danger">Отмена</a>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
