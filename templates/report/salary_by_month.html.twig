{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Зарплата по месяцам</h1>

            {% if rows is not empty %}
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead>
                            <tr>
                                <th>Месяц</th>
                                <th class="text-end">₽</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for row in rows %}
                                <tr>
                                    <td>{{ row.month|capitalize }}</td>
                                    <td class="text-end">{{ row.sum|number_format(0, ',', ' ') }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="alert alert-secondary">Нет данных для отображения.</div>
            {% endif %}

            <a class="btn btn-primary" href="{{ path('report_salary_by_month', { download: 'csv' }) }}">В Excel</a>

            <hr class="my-4">

            {{ include('report/report_sample.html.twig') }}
        </div>
    </div>
{% endblock %}
